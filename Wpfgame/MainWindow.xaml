<Window x:Class="Wpfgame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Background="Black">
    <Grid >
        <Image Source="/Wpfgame;component/Images/the_old_village_by_G_SPOTT.jpg" Stretch="UniformToFill" ImageFailed="Image_ImageFailed" />
        <Button Content="Login" Height="23" HorizontalAlignment="Left" Margin="214,210,0,0" Name="Login1" VerticalAlignment="Top" Width="75" Click="Login1_Click" />
        
        <TextBox Height="23" HorizontalAlignment="Left" Margin="193,117,0,0" Name="username_txt" VerticalAlignment="Top" Width="120" />
        <PasswordBox Height="23" HorizontalAlignment="Left" Margin="193,158,0,0" Name="password_txt" VerticalAlignment="Top" Width="120" PasswordChanged="password_txt_PasswordChanged" />
        <Button Content="Button" Height="23" HorizontalAlignment="Left" Margin="401,260,0,0" Name="button1" VerticalAlignment="Top" Width="75" Click="button1_Click" />
    </Grid>
</Window>
